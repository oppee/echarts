var tab = "{$tab}";
if(tab==""){
	tab=location.href.substr(location.href.indexOf("#")+1);
}
$('#'+tab).addClass("weui_tab_bd_item_active");
$('#'+tab).siblings("div").removeClass("weui_tab_bd_item_active");

