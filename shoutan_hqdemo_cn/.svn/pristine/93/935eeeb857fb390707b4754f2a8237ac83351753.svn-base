  	//重置密码
    $('.resetPassword').click(function(){
    	custom_confirm("您确定要重置密码吗？",function(){
			var url = $(this).attr("href");
			$.ajax({
				 type:"post",
				 url:url,
				 data:'',
				 dataType:"json",
				 success:function (data) {
					 if(data.status == '1'){
						 custom_alert("重置成功！");
					 }else{
						 custom_alert("重置失败！");
					 }
				 }
			 });
		});
		return false;
    });
    
  	//重置密码
    $('.del').click(function(){
    	var can_del = $(this).data("can_del");
    	var url = $(this).attr("href");
    	if(can_del == '1'){
    		custom_confirm("是否确认删除？",function(){
    			
    			$.ajax({
    				 type:"post",
    				 url:url,
    				 data:'',
    				 dataType:"json",
    				 success: function (rs){
   	                    $('body').modalmanager('loading');
   	                    if (rs.url != '') {
   	                        window.location.href = rs.url;
   	                    } else {
   	                        custom_alert(rs.info);
   	                    }
   	                },
   	                beforeSend: function (){
   	                    $('body').modalmanager('loading');
   	                }
    			 });
    		});
    	}else{
    		custom_alert("该账号已绑定商户，无法删除！");
    	}
    	
		return false;
    });
     
    
});
</script>

